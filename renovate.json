{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": [
        "*"
      ],
      "excludeManagers": [
        "helm-values",
        "kustomize"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "baseBranches": [
    "main",
    "/release-*/"
  ]
}
