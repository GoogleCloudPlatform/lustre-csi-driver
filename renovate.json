{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "helm-values",
    "kustomize"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "baseBranches": [
    "main",
    "/release-*/"
  ]
}
